<h2 class="text-center mb-4">Pacientes Registrados</h2>

<div class="d-flex justify-content-end mb-3">
  <a class="btn btn-success" href="/paciente/create">
    <i class="bi bi-person-plus-fill"></i> Crear Paciente
  </a>
</div>

<div class="card shadow-lg p-4 mx-auto" style="max-width: 200%;">
  <div class="table-responsive">
    <table class="table table-striped table-bordered align-middle">
      <thead class="table-dark text-center">
        <tr>
          <th>ID</th>
          <th>Nombres</th>
          <th>Apellidos</th>
          <th>Login</th>
          <th>Password</th>
          <th>Móvil</th>
          <th>Correo</th>
          <th>Dirección</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each pacientes }}
        <tr>
          <td><a href="/paciente/show/{{_id}}">{{idpaciente}}</a></td>
          <td>{{nombres}}</td>
          <td>{{apellidos}}</td>
          <td>{{login}}</td>
          <td>{{password}}</td>
          <td>{{movil}}</td>
          <td>{{correo}}</td>
          <td>{{direccion}}</td>
          <td class="text-center">
            <a href="/paciente/edit/{{_id}}" class="btn btn-sm btn-warning me-1">
              <i class="bi bi-pencil-fill"></i>
            </a>
            <form action="/paciente/delete/{{_id}}" method="POST" class="d-inline">
              <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar este paciente?')">
                <i class="bi bi-trash-fill"></i>
              </button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
