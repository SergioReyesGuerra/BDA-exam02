<h2 class="text-center mb-4">Editar Paciente</h2>

<form action="/paciente/update/{{paciente._id}}" method="POST" class="p-4 border rounded bg-white shadow-sm">
  <div class="row mb-3">
    <div class="col-md-6">
      <label for="idpaciente" class="form-label">ID Paciente</label>
      <input type="text" name="idpaciente" class="form-control" required value="{{paciente.idpaciente}}">
    </div>
    <div class="col-md-6">
      <label for="login" class="form-label">Login</label>
      <input type="text" name="login" class="form-control" required value="{{paciente.login}}">
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <label for="password" class="form-label">Password</label>
      <input type="text" name="password" class="form-control" required value="{{paciente.password}}">
    </div>
    <div class="col-md-6">
      <label for="movil" class="form-label">Móvil</label>
      <input type="text" name="movil" class="form-control" value="{{paciente.movil}}">
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <label for="apellidos" class="form-label">Apellidos</label>
      <input type="text" name="apellidos" class="form-control" value="{{paciente.apellidos}}">
    </div>
    <div class="col-md-6">
      <label for="nombres" class="form-label">Nombres</label>
      <input type="text" name="nombres" class="form-control" value="{{paciente.nombres}}">
    </div>
  </div>

  <div class="mb-3">
    <label for="correo" class="form-label">Correo Electrónico</label>
    <input type="email" name="correo" class="form-control" value="{{paciente.correo}}">
  </div>

  <div class="mb-3">
    <label for="direccion" class="form-label">Dirección</label>
    <input type="text" name="direccion" class="form-control" value="{{paciente.direccion}}">
  </div>

  <div class="text-end">
    <a href="/paciente" class="btn btn-secondary me-2">
      <i class="bi bi-arrow-left-circle"></i> Cancelar
    </a>
    <button type="submit" class="btn btn-primary">
      <i class="bi bi-save2"></i> Guardar Cambios
    </button>
  </div>
</form>
